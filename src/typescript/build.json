{
  "$schema": "https://www.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "preserveWatchOutput": true,
    "removeComments": true,
    "sourceMap": false
  },
  "exclude": [
    "dist/**/*",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "tests/**/*"
  ]
}
